<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888"
    tools:context="de.yadrone.android.GestureActivity">

    <TextView
        android:id="@+id/v_textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="Voice"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_textView1"
        android:orientation="horizontal"
        android:id="@+id/v_controlBG">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/v_emergency"
            android:text="Emergency"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#fff"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/v_land"
            android:text="Landing"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#fff"/>

    </LinearLayout>

    <TextView
        android:id="@+id/v_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_below="@+id/v_controlBG"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100sp"
        android:text="Recognize"
        android:id="@+id/v_recognize"
        android:textColor="#fff"
        android:layout_below="@+id/v_action"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textSize="50sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/v_result"
        android:layout_below="@+id/v_recognize"
        android:layout_centerHorizontal="true" />

</RelativeLayout>