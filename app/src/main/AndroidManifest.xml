<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.yadrone.android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".YADroneApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_yadrone">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ControlActivity"
            android:label="@string/title_activity_yadrone"
            android:screenOrientation="landscape" />
        <activity
            android:name=".NavDataActivity"
            android:label="@string/title_activity_yadrone" />
        <activity
            android:name=".videodeprecated.VideoActivity"
            android:label="@string/title_activity_yadrone"
            android:screenOrientation="landscape" />
        <activity
            android:name=".VoiceActivity"
            android:label="@string/title_activity_yadrone"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GravityActivity"
            android:label="@string/title_activity_yadrone"
            android:screenOrientation="portrait" />
        <activity android:name=".GestureActivity"
            android:label="@string/title_activity_yadrone"
            android:screenOrientation="portrait" />
    </application>

</manifest>
